# ================================================================
# TELEGRAM CASINO BOT CONFIGURATION
# ================================================================
# 
# IMPORTANT: This is a test environment configuration.
# For production deployment, update all values appropriately.
# 
# Sections:
# 1. Core Bot Configuration
# 2. Database Configuration
# 3. Web Application
# 4. Game Configuration
# 5. Payment & Economy System
# 6. User Management & Security
# 7. Deployment & Operations
# ================================================================

# ================================================================
# 1. CORE BOT CONFIGURATION
# ================================================================

# Telegram Bot Token from BotFather
# REQUIRED: Get from https://t.me/BotFather
BOT_TOKEN=test_token_for_local_testing

# Bot operational mode
# Set to 'false' for production, 'true' for testing
DEMO_MODE=true

# Environment identifier
ENVIRONMENT=development

# ================================================================
# 2. DATABASE CONFIGURATION
# ================================================================

# SQLite database file path
CASINO_DB=casino.db

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600
DB_MAX_BACKUPS=24

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ================================================================
# 3. WEB APPLICATION
# ================================================================

# Enable/disable web application interface
WEBAPP_ENABLED=true

# Flask secret key for sessions (MUST be random in production)
WEBAPP_SECRET_KEY=test-secret-key-for-local-development

# Server port for web interface
PORT=3000

# External URL for webhooks and callbacks
WEBAPP_URL=http://localhost:3000

# Session configuration
SESSION_TIMEOUT=1800
SESSION_SECURE_COOKIES=false

# ================================================================
# 4. GAME CONFIGURATION
# ================================================================

# -------------------- Game Limits --------------------

# Maximum single bet amount (USD)
MAX_BET_PER_GAME=1000

# Maximum daily losses per user (USD)
MAX_DAILY_LOSSES=5000

# Minimum bet amounts per game (USD)
MIN_SLOTS_BET=1
MIN_BLACKJACK_BET=5
MIN_DICE_BET=1
MIN_ROULETTE_BET=2
MIN_POKER_BET=5
MIN_COINFLIP_BET=1

# Maximum bet amounts per game (USD)
MAX_SLOTS_BET=500
MAX_BLACKJACK_BET=1000
MAX_DICE_BET=500
MAX_ROULETTE_BET=1000
MAX_POKER_BET=1000
MAX_COINFLIP_BET=500

# -------------------- House Edge Settings --------------------

# House edge percentages for fair play
HOUSE_EDGE_SLOTS=3.5
HOUSE_EDGE_BLACKJACK=1.5
HOUSE_EDGE_ROULETTE=2.7
HOUSE_EDGE_DICE=2.0
HOUSE_EDGE_POKER=3.0
HOUSE_EDGE_COINFLIP=2.0

# -------------------- Game Features --------------------

# Enable/disable custom bet options (Half, All-In, Custom)
CUSTOM_BETS_ENABLED=true

# Custom bet limits
MIN_CUSTOM_BET=1
MAX_CUSTOM_BET=1000

# Game session limits
MAX_GAMES_PER_HOUR=100
GAME_COOLDOWN_SECONDS=1

# ================================================================
# 5. PAYMENT & ECONOMY SYSTEM
# ================================================================

# -------------------- Withdrawal/Deposit --------------------

# Withdrawal limits and fees
MIN_WITHDRAWAL_USD=1.00
MAX_WITHDRAWAL_USD=10000.00
MAX_WITHDRAWAL_USD_DAILY=10000.00
WITHDRAWAL_FEE_PERCENT=0.05
WITHDRAWAL_COOLDOWN_SECONDS=300

# Deposit settings
MIN_DEPOSIT_USD=1.00
MAX_DEPOSIT_USD=10000.00

# -------------------- CryptoBot API --------------------

# CryptoBot Pay integration (for real crypto payments)
# Get API token from @CryptoBot
CRYPTOBOT_API_TOKEN=
CRYPTOBOT_USD_ASSET=LTC
CRYPTOBOT_WEBHOOK_SECRET=
CRYPTOBOT_ENABLED=false

# -------------------- Bonus System --------------------

# Weekly bonus configuration
WEEKLY_BONUS_AMOUNT=50.0
WEEKLY_BONUS_RATE=0.05
WEEKLY_BONUS_ENABLED=true

# Daily bonus configuration
DAILY_BONUS_AMOUNT=10.0
DAILY_BONUS_ENABLED=true

# Welcome bonus for new users
WELCOME_BONUS_AMOUNT=25.0
WELCOME_BONUS_ENABLED=true

# -------------------- Referral System --------------------

# Referral commission settings
REFERRAL_COMMISSION_PERCENT=0.20
REFERRAL_BONUS_REFEREE=5.0
MAX_REFERRALS_PER_USER=1000
REFERRAL_ENABLED=true

# Referral link configuration
REFERRAL_LINK_BASE=https://t.me/your_bot_username?start=ref_

# -------------------- VIP System --------------------

# VIP tier requirements (total wagered USD)
VIP_SILVER_REQUIRED=1000
VIP_GOLD_REQUIRED=5000
VIP_DIAMOND_REQUIRED=10000

# VIP multipliers for bonuses
VIP_SILVER_BONUS_MULTIPLIER=1.2
VIP_GOLD_BONUS_MULTIPLIER=1.5
VIP_DIAMOND_BONUS_MULTIPLIER=2.0

# ================================================================
# 6. USER MANAGEMENT & SECURITY
# ================================================================

# -------------------- Admin Configuration --------------------

# Admin user IDs (comma-separated)
ADMIN_USER_IDS=

# Owner/Super admin user ID
OWNER_USER_ID=0

# Support channel username
SUPPORT_CHANNEL=@casino_support

# -------------------- Anti-Spam & Rate Limiting --------------------

# Command spam protection
ANTI_SPAM_WINDOW=10
MAX_COMMANDS_PER_WINDOW=20

# General rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Login attempt limits
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# -------------------- Security Settings --------------------

# User verification requirements
EMAIL_VERIFICATION_REQUIRED=false
PHONE_VERIFICATION_REQUIRED=false

# KYC (Know Your Customer) settings
KYC_REQUIRED_FOR_WITHDRAWAL=false
KYC_WITHDRAWAL_THRESHOLD=1000

# IP and device tracking
TRACK_USER_IPS=true
MAX_DEVICES_PER_USER=5

# ================================================================
# 7. DEPLOYMENT & OPERATIONS
# ================================================================

# -------------------- Server Configuration --------------------

# External URL for production deployment
RENDER_EXTERNAL_URL=

# Health check and monitoring
HEARTBEAT_INTERVAL=300
HEALTH_CHECK_ENABLED=true

# Webhook configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# -------------------- Logging & Monitoring --------------------

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file configuration
LOG_TO_FILE=true
LOG_FILE_PATH=logs/casino_bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1.0

# -------------------- Background Tasks --------------------

# Task scheduling
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Automatic backups
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_SCHEDULE=0 */6 * * *

# Statistics collection
STATS_COLLECTION_ENABLED=true
STATS_RETENTION_DAYS=90

# ================================================================
# DEVELOPMENT & TESTING
# ================================================================

# Development mode features
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing configuration
PYTEST_DATABASE=test_casino.db
MOCK_PAYMENTS=true

# ================================================================
# FEATURE FLAGS
# ================================================================

# Enable/disable major features
GAMES_ENABLED=true
PAYMENTS_ENABLED=true
REFERRALS_ENABLED=true
VIP_SYSTEM_ENABLED=true
BONUSES_ENABLED=true
WITHDRAWALS_ENABLED=true

# Experimental features
MINI_GAMES_ENABLED=false
TOURNAMENTS_ENABLED=false
CHAT_SYSTEM_ENABLED=false
