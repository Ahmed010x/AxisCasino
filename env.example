# ================================================================
# TELEGRAM CASINO BOT CONFIGURATION TEMPLATE
# ================================================================
# 
# Copy this file to .env and update all values for your deployment.
# 
# SECURITY WARNING: Never commit .env files to version control!
# 
# Required for basic operation:
# - BOT_TOKEN (from @BotFather)
# - CASINO_DB (database file path)
# - WEBAPP_SECRET_KEY (random string for sessions)
# 
# ================================================================

# ================================================================
# 1. CORE BOT CONFIGURATION
# ================================================================

# REQUIRED: Telegram Bot Token from BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Bot operational mode (true for testing, false for production)
DEMO_MODE=false

# Environment identifier (development/staging/production)
ENVIRONMENT=production

# ================================================================
# 2. DATABASE CONFIGURATION
# ================================================================

# SQLite database file path
CASINO_DB=casino.db

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600
DB_MAX_BACKUPS=24

# Database connection settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ================================================================
# 3. WEB APPLICATION
# ================================================================

# Enable web application interface
WEBAPP_ENABLED=true

# REQUIRED: Random secret key for Flask sessions
WEBAPP_SECRET_KEY=GENERATE_RANDOM_SECRET_KEY_HERE

# Server port
PORT=10000

# REQUIRED: External URL for production deployment
WEBAPP_URL=https://your-app-name.onrender.com

# Session configuration
SESSION_TIMEOUT=1800
SESSION_SECURE_COOKIES=true

# ================================================================
# 4. GAME CONFIGURATION
# ================================================================

# Game limits (USD)
MAX_BET_PER_GAME=1000
MAX_DAILY_LOSSES=5000

# Minimum bets per game
MIN_SLOTS_BET=0.50
MIN_BLACKJACK_BET=0.50
MIN_DICE_BET=0.50
MIN_ROULETTE_BET=0.50
MIN_POKER_BET=0.50
MIN_COINFLIP_BET=0.50

# Maximum bets per game
MAX_SLOTS_BET=500
MAX_BLACKJACK_BET=1000
MAX_DICE_BET=500
MAX_ROULETTE_BET=1000
MAX_POKER_BET=1000
MAX_COINFLIP_BET=500

# House edge percentages
HOUSE_EDGE_SLOTS=3.5
HOUSE_EDGE_BLACKJACK=1.5
HOUSE_EDGE_ROULETTE=2.7
HOUSE_EDGE_DICE=2.0
HOUSE_EDGE_POKER=3.0
HOUSE_EDGE_COINFLIP=2.0

# Game features
CUSTOM_BETS_ENABLED=true
MIN_CUSTOM_BET=0.50
MAX_CUSTOM_BET=1000
MAX_GAMES_PER_HOUR=100
GAME_COOLDOWN_SECONDS=1

# ================================================================
# 5. PAYMENT & ECONOMY SYSTEM
# ================================================================

# Withdrawal settings
MIN_WITHDRAWAL_USD=10.00
MAX_WITHDRAWAL_USD=5000.00
MAX_WITHDRAWAL_USD_DAILY=5000.00
WITHDRAWAL_FEE_PERCENT=0.01
WITHDRAWAL_COOLDOWN_SECONDS=300

# Deposit settings
MIN_DEPOSIT_USD=5.00
MAX_DEPOSIT_USD=5000.00

# CryptoBot Pay integration (OPTIONAL)
CRYPTOBOT_API_TOKEN=
CRYPTOBOT_USD_ASSET=LTC
CRYPTOBOT_WEBHOOK_SECRET=
CRYPTOBOT_ENABLED=false

# Bonus system
WEEKLY_BONUS_AMOUNT=50.0
WEEKLY_BONUS_RATE=0.05
WEEKLY_BONUS_ENABLED=true
DAILY_BONUS_AMOUNT=10.0
DAILY_BONUS_ENABLED=true
WELCOME_BONUS_AMOUNT=25.0
WELCOME_BONUS_ENABLED=true

# Referral system
REFERRAL_COMMISSION_PERCENT=0.20
REFERRAL_BONUS_REFEREE=5.0
MAX_REFERRALS_PER_USER=1000
REFERRAL_ENABLED=true
REFERRAL_LINK_BASE=https://t.me/YOUR_BOT_USERNAME?start=ref_

# VIP system
VIP_SILVER_REQUIRED=1000
VIP_GOLD_REQUIRED=5000
VIP_DIAMOND_REQUIRED=10000
VIP_SILVER_BONUS_MULTIPLIER=1.2
VIP_GOLD_BONUS_MULTIPLIER=1.5
VIP_DIAMOND_BONUS_MULTIPLIER=2.0

# ================================================================
# 6. USER MANAGEMENT & SECURITY
# ================================================================

# REQUIRED: Admin configuration
ADMIN_USER_IDS=YOUR_TELEGRAM_USER_ID
OWNER_USER_ID=YOUR_TELEGRAM_USER_ID
SUPPORT_CHANNEL=@your_support_channel

# Anti-spam and rate limiting
ANTI_SPAM_WINDOW=10
MAX_COMMANDS_PER_WINDOW=20
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# Security settings
EMAIL_VERIFICATION_REQUIRED=false
PHONE_VERIFICATION_REQUIRED=false
KYC_REQUIRED_FOR_WITHDRAWAL=false
KYC_WITHDRAWAL_THRESHOLD=1000
TRACK_USER_IPS=true
MAX_DEVICES_PER_USER=5

# ================================================================
# 7. DEPLOYMENT & OPERATIONS
# ================================================================

# Deployment settings
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
HEARTBEAT_INTERVAL=300
HEALTH_CHECK_ENABLED=true

# Webhook configuration (OPTIONAL)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/casino_bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1.0

# Background tasks
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_SCHEDULE=0 */6 * * *
STATS_COLLECTION_ENABLED=true
STATS_RETENTION_DAYS=90

# ================================================================
# DEVELOPMENT & TESTING
# ================================================================

# Development features (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing configuration
PYTEST_DATABASE=test_casino.db
MOCK_PAYMENTS=false

# ================================================================
# FEATURE FLAGS
# ================================================================

# Core features
GAMES_ENABLED=true
PAYMENTS_ENABLED=true
REFERRALS_ENABLED=true
VIP_SYSTEM_ENABLED=true
BONUSES_ENABLED=true
WITHDRAWALS_ENABLED=true

# Experimental features (enable as needed)
MINI_GAMES_ENABLED=false
TOURNAMENTS_ENABLED=false
CHAT_SYSTEM_ENABLED=false
