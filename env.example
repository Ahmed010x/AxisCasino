# Casino Bot Environment Configuration
# Copy this to .env and fill in your values

# Required - Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# WebApp Configuration
WEBAPP_URL=https://your-casino-webapp.vercel.app
WEBAPP_ENABLED=true
WEBAPP_SECRET_KEY=your_secret_key_here

# Render Hosting (for production)
PORT=10000
RENDER_EXTERNAL_URL=https://your-app.onrender.com
HEARTBEAT_INTERVAL=300

# Database
CASINO_DB=casino.db

# CryptoBot API Configuration (for deposit/withdrawal)
# Get your API token from https://pay.crypt.bot/
CRYPTOBOT_API_TOKEN=your_cryptobot_api_token_here
CRYPTOBOT_USD_ASSET=USDT
CRYPTOBOT_WEBHOOK_SECRET=your_webhook_secret_here

# Withdrawal Settings
MIN_WITHDRAWAL_USD=1.00
MAX_WITHDRAWAL_USD=10000.00
MAX_WITHDRAWAL_USD_DAILY=10000.00
WITHDRAWAL_FEE_PERCENT=2.0
WITHDRAWAL_COOLDOWN_SECONDS=300

# Security & Limits
MAX_BET_PER_GAME=1000
MAX_DAILY_LOSSES=5000
ANTI_SPAM_WINDOW=10
MAX_COMMANDS_PER_WINDOW=20

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
SUPPORT_CHANNEL=@casino_support

# Owner Configuration (create separate .env.owner file)
# OWNER_USER_ID=your_telegram_user_id

# Referral System
REFERRAL_BONUS_REFERRER=10.0
REFERRAL_BONUS_REFEREE=5.0
REFERRAL_MIN_DEPOSIT=10.0
MAX_REFERRALS_PER_USER=50

# Weekly Bonus
WEEKLY_BONUS_AMOUNT=5.0

# Demo Mode (set to true for testing)
DEMO_MODE=false

# VIP Levels (in chips)
VIP_SILVER_REQUIRED=1000
VIP_GOLD_REQUIRED=5000
VIP_DIAMOND_REQUIRED=10000
